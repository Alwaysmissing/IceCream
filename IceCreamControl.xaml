<UserControl x:Class="IceCream.View.IceCreamControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:IceCream.View"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="120">
    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBlock Text="状态：" />
        <TextBlock x:Name="txt_State" Text="{Binding RelativeSource={RelativeSource AncestorType=local:IceCreamControl},Path=State}" Margin="3,0,0,0"/>
    </StackPanel>
</UserControl>
